{{!-- 
    Liste de tome Page ID (Manga) 
--}}

<div class="container m-3">
  <div class=" row row-flip">

    {{#each tomeID}}

    {{!-- Card --}}
    <div class="flip-card m-5">
      <a href data-toggle="modal" data-target="#descriptionTome{{_id}}">
        <div class="flip-card-inner">

          {{!-- Front --}}
          <div class="flip-card-front">
            <img src="{{ image }}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">Volume: {{ volume }}</h5>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>

          {{!-- Back --}}
          <div class="flip-card-back">
            <ul class="list-group">
              <li class="list-group-item"><strong>Scénario :</strong>
                {{dessin}}
              </li>
              <li class="list-group-item">
                <strong>Traducteur :</strong>
                {{Traducteur}}
              </li>
              <li class="list-group-item"><strong>Editeur VO :</strong>
                {{ EditeurVO}}
              </li>
              <li class="list-group-item"><strong>Prépublication :</strong>
                {{prepublication}}
              </li>
              <li class="list-group-item"><strong>Illustration :</strong>
                {{ illustration}}
              </li>
              <li class="list-group-item"><strong>Origine :</strong>
                {{origine}} </li>

            </ul>
          </div>
        </div>
      </a>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="descriptionTome{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Volume: {{ volume }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <img src="{{ image }}" class="card-img-top" alt="...">
          </div>
          <ul class="list-group">
            <li class="list-group-item"><strong>Scénario :</strong>
              {{dessin}}
            </li>
            <li class="list-group-item">
              <strong>Traducteur :</strong>
              {{Traducteur}}
            </li>
            <li class="list-group-item"><strong>Editeur VO :</strong>
              {{ EditeurVO}}
            </li>
            <li class="list-group-item"><strong>Prépublication :</strong>
              {{prepublication}}
            </li>
            <li class="list-group-item"><strong>Illustration :</strong>
              {{ illustration}}
            </li>
            <li class="list-group-item"><strong>Origine :</strong>
              {{origine}} </li>
            <li class="list-group-item"><strong>Description:</strong>
              {{description}} </li>
          </ul>
          <div class="modal-footer">
            <button type="button" class="btn " data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    {{/each }}
   
  </div>
</div>