<div  class="container mb-5 pt-5 mt-5 pb-5 bg-primary">
   
    <div class="container  ">
        <div class="card m-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img name="image" src="/img/bookimg/naruto_1.jpg" class="card-img" alt="naruto">
                </div>
                <div class="col-md-8 justify-content-center">
                    <div class="card-body justify-content-evenly">
                        <p class="card-text  font-weight-bold text-lg-left">
                            {{ manga.titlevo }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container bg-success">
        <div class="row text-decoration-none">
            <ul class="col-md-4">
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">nom du manga en vo</label>
                    </div>
                    <div class="col-md-6">
                        <p name="nom-manga-vo"> {{ manga.titlevo }}</p>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">nom de manga en vf</label>
                    </div>
                    <div class="col-md-6">
                        <p name="nom-manga-de-langue-server"> {{ manga.titlevf }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">date de parution</label>
                    </div>
                    <div class="col-md-6">
                        <p name="date-de-parution"> {{ manga.titlevo }}</p>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">dessin</label>
                    </div>
                    <div class="col-md-6">
                        <p name="dessin">  {{ manga.tome.dessin }}</p>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">scenariste</label>
                    </div>
                    <div class="col-md-6">
                        <p name="scenariste">  {{ manga.titlevo }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">traducteur</label>
                    </div>
                    <div class="col-md-6">
                        <p name="traducteur">{{ manga.traducteur }}</p>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">editeur en vf</label>
                    </div>
                    <div class="col-md-6">
                        <p name"editeur-vf">{{ manga.editeurVF }}</p>
                    </div>
                </div>
            </ul>
            <div class="col-md-4">
                <img name="img-de-manga" src="/img/NARUTOH.jpg" alt="naruto" class="card-img">
            </div>
            <ul class="col-md-4">
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">type</label>
                    </div>
                    <div class="col-md-6">
                        <p name="type">{{ manga.type.nameType }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">genre</label>
                    </div>
                    <div class="col-md-6">

                        <p name="genre">{{ manga.nameType }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">éditeur en vo</label>
                    </div>
                    <div class="col-md-6">

                        <p iname"editeur-vo">{{ manga.editeurvo }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">prépublication</label>
                    </div>
                    <div class="col-md-6">

                        <p name="prépublication">{{ manga.prepublication }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">numero du volume</label>
                    </div>
                    <div class="col-md-6">

                        <p name="volume">{{ manga.volume }} </p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">origine</label>
                    </div>
                    <div class="col-md-6">

                        <p name="origine"> {{ manga.origine }}</p>

                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="">code-EAN</label>
                    </div>
                    <div class="col-md-6">

                        <p name="code-EAN"> KA01</p>

                    </div>
                </div>


            </ul>
        </div>
    </div>
    <div class="container mt-5 p-4  bg-warning">
        <div class="row bg-white">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 justify-content-center ">
                        <div class="m-5 ">
                            <label for="" class="">Age Conseillé</label>
                        </div>

                        <div class="m-5 ">
                            <p class="" name="age-conseillé">10+</p>
                        </div>
                    </div>
                    <div class="col-md-6justify-content-center">
                        <div class="m-5 justify-content-center">
                            <label for="note de redaction" class="justify-content-center">prix</label>
                        </div>
                        <div class="m-5 justify-content-center">
                            <p class=" justify-content-center" name="prix">6.99</p>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-12 bg-contact p-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">les volume en cours</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row ">les volumes en vo</th>
                            <td name="tome-vo">50</td>
                            <td name="statut-tome-vo">terminer</td>
                        </tr>
                        <tr>
                            <th scope="row">les volumes en vf</th>
                            <td name="tome-vf">40</td>
                            <td name="statut-tome-vf">en cours</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>