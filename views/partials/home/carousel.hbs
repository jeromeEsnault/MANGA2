<!-- CARROUSEL-->
<div class="container back mt-4">
  <div class="row">
    <div class="col-md-12">
      <div id="carouselHome" class="carousel slide" data-ride="carousel">
        {{#if dbCarousel }}
        <div class="carousel-inner">
          {{#each dbCarousel}}
          <div class="carousel-item active img-fluid" id="">

            <img src="{{galleryImg}}" class="d-block w-100 h-75" alt="{{galleryImg}}">
          </div>
          <div class="carousel-item">
            <img src="{{galleryImg}}" class="d-block w-100 h-75" alt="{{galleryImg}}">
          </div>
          <div class="carousel-item">
            <img src="{{galleryImg}}" class="d-block w-100 h-75" alt="{{galleryImg}}">
          </div>
          {{/each}}
        </div>
        {{else}}

        <div class="carousel-inner">
          <div class="carousel-item active img-fluid" id="">

            <img src="/assets/img/backheader.jpg" class="d-block w-100 h-75" alt="header">
          </div>
          <div class="carousel-item">
            <img src="/assets/img/DGRAY-MAN.jpg" class="d-block w-100 h-75" alt="d-gray-man">
          </div>
          <div class="carousel-item">
            <img src="/assets/img/NARUTOH.jpg" class="d-block w-100 h-75" alt="naruto">
          </div>
        </div>
        {{/if }}
        <a class="carousel-control-prev" href="#carouselHome" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- /CARROUSEL-->