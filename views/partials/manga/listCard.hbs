<!-- NEWS ARTICLE-->

<div class="container mb-5 card-deck">
    <div class="row">
        {{#each manga  }}
         {{#each tome  }}
        <div class="col-md-4">
            <a href="/booking/{{ id }}">
                <div class="card">
                    <div class="card-img img-thumbnail">
                        {{#if image }}
                        <img src=" {{ image }} " class="card-img" alt="naruto">
                        {{else }}
                        <img src="/img/imgDefault/imgmanga.jpg " class="card-img" alt="img par default">
                        {{/if}}

                    </div>
                    <div class="card-body">
                        <h5 class="card-title"> {{ titlevf }} </h5>
                        <p class="card-text" name="description"> {{ description }} </p>
                        <p class="card-text" name="date de parution"><small class="text-muted"> creer par {{ author }} ,
                                le {{ datedecreation }} </small></p>

                    </div>
                </div>
            </a>
        </div> 
        {{/each }}
        {{/each }}
    </div>
</div>

<!-- /NEWS ARTICLE-->