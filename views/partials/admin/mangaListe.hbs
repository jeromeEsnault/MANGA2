<div class="container">
    <div class="row">
        <div class="col-md-12 text-center m-5">
            <h2>liste des manga</h2>
        </div>
    </div>
</div>


<!-- liste colapse-->
{{#each manga }}
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="media-body" id="headingOne">

            <img src="{{ tome.image }}" class="mr-3" alt="...">
            <div class="media-body">
                <h5 class="mt-0 mb-1">{{ titlevf }}</h5>
                {{ description }}


            </div>
            <div class="text-right">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-right" type="button" data-toggle="mangaListe"
                        data-target="#mangaListe" aria-expanded="true" aria-controls="mangaListe">
                        <i class="fas fa-check-circle"></i>
                    </button>

                    <a href="/modal/supmanga">
                        <i class="far fa-trash-alt"></i>
                    </a>
                    <a href="/editAdmin/{{ _id }}">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a href="">
                        <i class="fas fa-ban"></i>
                    </a>
                    <a href="">
                        <i class="fas fa-check-circle"></i>
                    </a>
                </h2>
            </div>


        </div>

        <div id="mangaListe" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                coucou
            </div>
        </div>

    </div>
</div>
{{/each  }}


<!-- liste-->
<div class="container">
    <div class="row">
        <ul class="list-unstyled">
            {{#each manga }}
            <li class="media" id="{{ tome._id }}">

                <div class="media-body">

                    <div class="text-right">
                        <a href="/modal/supmanga">
                            <i class="far fa-trash-alt"></i>
                        </a>
                        <a href="/editAdmin/{{ _id }}">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="">
                            <i class="fas fa-plus-circle"></i>
                        </a>
                        <a href="">
                            <i class="fas fa-ban"></i>
                        </a>
                        <a href="">
                            <i class="fas fa-check-circle"></i>
                        </a>

                    </div>
                </div>
            </li>
            {{/each  }}
        </ul>
    </div>
</div>