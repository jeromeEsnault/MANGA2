<div class="container">
    <div class="row">
        <div class="col-md-12 text-center m-5">
            <h2>liste des manga</h2>
        </div>
    </div>
</div>

<div class="accordion container" id="accordionListeManga">
    {{#each manga }}
    <div class="card">
        <div class="card-header" id="headingOne">
          
            <div class="card-img">
                <img class="" style="width: 50px;" src="{{tome1.image}} " alt="">
            </div>
         
            <div class=" text-left ">
                <ul class="list-group list-group-horizontal">
                    <li class="list-inline p-1">{{ titlevf }}</li>
                    <li class="list-inline p-1">{{ titlevo }}</li>
                    <li class="list-inline p-1">{{ author }}</li>
                    <li class="list-inline p-1">{{ nameType }}</li>
                </ul>
            </div>

            <h2 class=" text-left  col-md-3">
                <button class="btn" type="button" data-toggle="collapse" data-target="#collapseOne{{ titlevf }}"
                    aria-expanded="false" aria-controls="collapseOne{{ titlevf }}">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="btn" type="button">
                    <a href="/modal/supmanga">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </button>
                <button class="btn" type="button">
                    <a href="/editAdmin/{{ _id }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </button>
                <button class="btn" type="button">
                    <a href="">
                        <i class="fas fa-ban"></i>
                    </a>
                </button>
                {{#if ispublished }}
                <button class="btn" type="button">
                    <a href="">
                        <i class="fas fa-check-circle"></i>
                    </a>
                </button>
                {{else}}
                <button class="btn" type="button">
                    <a href="">
                        <i class="fas fa-check-circle"></i>
                    </a>
                </button>
                {{/if}}
            </h2>
        </div>
        <div id="collapseOne{{ titlevf }}" class="collapse show" aria-labelledby="headingOne"
            data-parent="#accordionListeManga">
            <div class="card-body">
                <div class="text-center">

                    <button type="button" class=" btn btn-warning" aria-label="Close" aria-hidden="true"
                        data-toggle="modal" data-target="#newsTome{{_id}}">
                        <span>cr√©er un nouveaux tome </span>
                    </button>
                    {{> modal/tome manga=manga }}

                </div>
                {{> adminTome/tableTome manga=manga tome=tome }}

            </div>
        </div>
    </div>
    {{/each  }}
</div>